@model WebApplicationBPR2.Data.Entities.Product

@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group">
            <label>Category:</label>
            @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Size:</label>
            @Html.TextBoxFor(x => x.Size, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Price:</label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Title:</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Description:</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>PhotoId:</label>
            @Html.TextBoxFor(x => x.PhotoId, new { @class = "form-control" })
        </div>
        <div class="button">
            <button asp-controller="App" asp-action="Edit">Submit</button>
        </div>
        <div>
            <p><a asp-controller="App" asp-action="crud">Back</a></p>
        </div>
    </div>
}