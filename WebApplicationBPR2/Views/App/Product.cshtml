@model IEnumerable<Product>

<div id="body">
    <div class="header">
        <div>
            <h1>Categories</h1>
        </div>
    </div>

    <div>
        <hr />
        <ul>
            <li class="menu">
                <a asp-controller="App" asp-action="IceCream"><h2>Ice Cream</h2></a>              
            </li>
            <li class="menu">
                <a asp-controller="App" asp-action="Cakes"><h2>Cakes</h2></a>
            </li>
            <li class="menu">
                <a asp-controller="App" asp-action="Tarts"><h2>Tarts</h2></a>
            </li>

        </ul>
        <hr />
        
    </div>
   

    <div >
   
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <img src="~/images/@(item.PhotoId).jpg" alt="">
                <div class="caption">

                    <h3>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                    </h3>
                    <p>@item.Description</p>
                    <p><h3 class="img-thumbnail">@item.Price.ToString("c")</h3></p>
                    <p class="button">
                        <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                           asp-route-productId="@item.Id">Add to cart</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>
   