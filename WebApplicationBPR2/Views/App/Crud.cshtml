@model List<WebApplicationBPR2.Data.Entities.Product>

@{
    ViewData["Title"] = "Crud";
}

<a href="@Url.Action("Create")">CREATE</a>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Category</td>
                    <td>@Model[i].Price</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = Model[i].Id})">DELETE</a>
                        <a href="@Url.Action("Edit", new { id = Model[i].Id})">EDIT</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>