@model Product

<div id="body" class="thumbnail">
    <img alt="@Model.Title" src="~/images/@(Model.PhotoId).jpg">
    <div class="caption">
        <h3 class="pull-right img-thumbnail">@Model.Price.ToString("c")</h3>
        <h3>
            <a href="#">@Model.Title</a>
        </h3>
        <h4>@Model.Description</h4>
        
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-productId="@Model.Id">Add to cart</a>
        </p>
    </div>
</div>
