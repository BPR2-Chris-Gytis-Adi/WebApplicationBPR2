@*also known as master page, it contains the elements common to all controllers*@



<!doctype html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title</title>
    @*<script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/css/mobile.css">
    
    
    
</head>

<body>
    <div class="wrapper"
   
        
            <div id="header">
                <div>
                    <a asp-controller="App" asp-action="Index" class="logo"><img src="~/images/logo.png" alt=""></a> @*using tag helpers for links and navigation*@

                    <ul id="navigation">
                        <li class="selected">
                            <a asp-controller="App" asp-action="Index">Home</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="App" asp-action="About">About</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="App" asp-action="Product">Products</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="App" asp-action="Blog">Blog</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="ShoppingCart" asp-action="index">Order</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="App" asp-action="Contact">Contact</a>
                        </li>
                        @*<li class="menu">
                            <a asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="menu">
                            <a asp-controller="Account" asp-action="Login">Login</a>
                        </li>*@
                        
                        @await Component.InvokeAsync("ShoppingCartSummary")
                        @await Html.PartialAsync("LoginPartial")
                   
                        
                     
                        
                       
                    </ul>
                    
                    <form class="navbar-form navbar-right" asp-controller="Product" asp-action="Search" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search for a product" name="searchString" value="@ViewData["searchString"]">
                        </div>
                    </form>
                </div>
            </div>



            <section>
                @RenderBody()
            </section>



            <div id="footer">
                <div>
                    <div class="connect">
                        <a href="http://freewebsitetemplates.com/go/facebook/" class="facebook">facebook</a>
                        <a href="http://freewebsitetemplates.com/go/twitter/" class="twitter">twitter</a>
                        <a href="http://freewebsitetemplates.com/go/googleplus/" class="googleplus">googleplus</a>
                        <a href="http://pinterest.com/fwtemplates/" class="pinterest">pinterest</a>

                        @*---------------- scripts area ------------------*@


                        <script src="~/lib/js/mobile.js" type="text/javascript"></script>
                        <script src="~/lib/jquery/dist/jquery.min.js"></script>

                        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
                        @*<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>*@
                        @*bootstrap needs jquery so it must be after it*@

                        @*---------------- scripts area -------------------*@


                    </div>
                    <p>&copy; 1993-@DateTime.Now.Year Freeeze. All Rights Reserved.</p>
                </div>
            </div>
        </div>
 
   
</body>
</html>

