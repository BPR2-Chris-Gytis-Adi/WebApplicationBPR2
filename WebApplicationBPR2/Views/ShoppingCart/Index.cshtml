@model ShoppingCartViewModel

<div class="wrapper">
    <div id="body" class="blog">
        <div class="header">
            <div>
                <h1>Shopping Cart</h1>
            </div>
        </div>
        <div class="body">
            <div class="menu">
                <section>
                    <br /><br /><br />
                </section>
                <ul>
                    <li><h2>Your shopping cart</h2></li>
                </ul>


                <section>
                    <br /><br /><br />
                </section>
                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Selected amount</th>
                            <th>Product</th>
                            <th class="text-right">Price</th>
                            <th class="text-right">Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.ShoppingCart.OrderItems)
                        {
                            <tr>
                                <td class="text-center">@line.Quantity</td>
                                <td class="text-left">@line.Product.Title</td>
                                <td class="text-right">@line.Product.Price.ToString("c")</td>
                                <td class="text-right">
                                    @((line.Quantity * line.Product.Price).ToString("c"))
                                </td>
                                <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@line.Product.Id"></a></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total:</td>
                            <td class="text-right">
                                @Model.ShoppingCartTotal.ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-right">
                    <div class="btn-group ">
                        <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>
                        <a class="btn-group">
                            <a class="btn btn-default" asp-controller="App" asp-action="Product">
                                Add more products
                            </a>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>      