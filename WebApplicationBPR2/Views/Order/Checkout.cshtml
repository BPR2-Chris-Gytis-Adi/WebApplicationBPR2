@model Order

<div id="body">
    <div class="header">
        <div>
            <h1>Checkout</h1>
        </div>
    </div>
</div>

<div id="body" class="contact">
    <div class="footer">
        <div class="contact">
            <h1 >checkout form</h1>
            
            <form asp-action="Checkout" method="post" class="form-horizontal " role="form">
                <label asp-for="LastName" ></label>
                <input asp-for="LastName" >
                <span asp-validation-for="LastName" class="text-danger"></span>

                <label asp-for="FirstName"></label>
                <input asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>

                <label asp-for="AddressLine1"></label>
                <input asp-for="AddressLine1">
                <span asp-validation-for="AddressLine1" class="text-danger"></span>

                <label asp-for="AddressLine2"></label>
                <input asp-for="AddressLine2">
                <span asp-validation-for="AddressLine2" class="text-danger"></span>

                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode">
                <span asp-validation-for="ZipCode" class="text-danger"></span>

                <label asp-for="State"></label>
                <input asp-for="State">
                <span asp-validation-for="State" class="text-danger"></span>

                <label asp-for="Country"></label>
                <input asp-for="Country">
                <span asp-validation-for="Country" class="text-danger"></span>

                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                <label asp-for="Email"></label>
                <input asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

                <input type="submit" value="Send order" id="submit">
            </form>
        </div>
    </div>
</div>
